{
  "manifest_version": 2,
  "name": "Improve Youtube",
  "version": "1.0",

  "browser_action": {
    "default_title": "The home page",
    "default_popup": "popup.html"
  },

  "permissions": [
    "*://youtube/*","*://www.youtube.com/*",
    "storage",
    "contextMenus",
    "tabs"
  ],

  "background": {
      "scripts": ["background.js"],
      "presistent": false
    },

  "content_scripts": [ {
      "matches":["*://www.youtube.com/watch?*"],
      "js":["inject.js"]
    }
  ]
}
